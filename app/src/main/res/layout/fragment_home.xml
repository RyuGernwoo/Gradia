<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 좌상단 메인 아이콘 -->
    <ImageView
        android:id="@+id/img_main_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_main_logo"
        android:contentDescription="Main Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 우상단: 프로필, 알림, 검색 아이콘 (오른쪽부터 순서대로 배치) -->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_notifications"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_notifications"
        android:contentDescription="Notifications"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_profile"
        android:layout_marginEnd="12dp"/>

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_search"
        android:contentDescription="Search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_notifications"
        android:layout_marginEnd="12dp"/>

    <!-- 중앙 빈 상태 안내 + 버튼 -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/img_main_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가된 과목이 없습니다."
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_go_to_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목 추가하기"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 추가된 과목들을 표시할 컨테이너 -->
    <LinearLayout
        android:id="@+id/subject_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/empty_state_container"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
