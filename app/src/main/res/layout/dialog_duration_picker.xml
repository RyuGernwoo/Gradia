<?xml version="1.0" encoding="utf-8"?>
<!-- Custom Dialog : Time Duration Picker -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Hour NumberPicker -->
    <NumberPicker
        android:id="@+id/time_hour_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_hour_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Hour TextView -->
    <TextView
        android:id="@+id/time_hour_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="시간"
        app:layout_constraintStart_toEndOf="@+id/time_hour_picker"
        app:layout_constraintEnd_toStartOf="@+id/time_minute_picker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Minute NumberPicker -->
    <NumberPicker
        android:id="@+id/time_minute_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/time_hour_textview"
        app:layout_constraintEnd_toStartOf="@+id/time_minute_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Minute TextView -->
    <TextView
        android:id="@+id/time_minute_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/time_minute_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>